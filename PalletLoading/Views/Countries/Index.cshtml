@model IEnumerable<PalletLoading.Models.Countries>

@{
    ViewData["Title"] = "Index";
}

<h1>Countries</h1>


<link rel="stylesheet" href="~/css/background.css" />

<p>
    <a class="btn btn-success" asp-action="Create">New Country</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.NameSortParm})
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Abbreviation)
            </th>
            <th>
                Client Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
                <td style="padding-top:18px">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="padding-top:18px">
                    @Html.DisplayFor(modelItem => item.Abbreviation)
                </td>
                <td style="padding-top:18px">
                    @Html.DisplayFor(modelItem => item.Type.Name)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    @*       <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a>  *@
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
}
    </tbody>
</table>
