@model PalletLoading.Models.AddClientsModelView

    <h3>Contries and containers</h3>
    <a asp-action="AddContainer" asp-controller="Pallets" class="btn btn-success btn-sm m-1" asp-route-id="@Model.idContainer">Add client</a>
    <table class="table">
        <tr>
            <th>
                Country
            </th>
            <th>
                Container
            </th>
        </tr>
        @foreach (var item in Model.ContainerATs)
        {
            <tr>
                <td>@item.Country.Name - @item.Country.Abbreviation</td>
                <td>@item.ContainerName</td>
                <td><a asp-action="DeleteClient" class="btn btn-danger" asp-route-id="@item.Id" asp-route-idContainer="@Model.idContainer">Delete</a></td>
            </tr>
        }
    </table>
    <a asp-action="Create" asp-route-id="@Model.idContainer" >Back to container</a>