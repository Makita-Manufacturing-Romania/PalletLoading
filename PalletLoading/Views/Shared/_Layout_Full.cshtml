<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" type="image/x-icon" href="~/mlogo.ico" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <style>
        @@media print {
            .hidden-print {
                display: none !important;
            }
        }

        #containerImg {
            /*transition: transform 0.5ms linear;*/
        }

            #containerImg:hover {
                /*transform: scale(1.2);*/
                animation-name: rotateContainer;
                animation-duration: 0.7s;
            }

        @@keyframes rotateContainer {
            0% {
                transform: rotate(0deg);
            }

            50% {
                transform: rotate(-15deg);
            }

            75% {
                transform: rotate(15deg);
            }

            100% {
                transform: rotate(0deg);
            }
        }

                #pcPal:hover {
            animation-name: scaleSettingsPcPal;
            animation-duration: 0.2s;
            animation-fill-mode: forwards;
        }

        @@keyframes scaleSettingsPcPal {


            100% {
                transform: scale(1.1);
                /*text-decoration:underline;*/
            }
        }

        #settingsImg {
            /*transition: transform 0.5ms linear;*/
            /*            animation-name: rotateContainer;
                    animation-duration: 0.7s;*/
        }

            #settingsImg:hover {
                /*transform: scale(1.2);*/
                animation-name: scaleSettings;
                animation-duration: 0.2s;
                animation-fill-mode: forwards;
            }

        @@keyframes scaleSettings {
            0% {
                transform: scale(0.8);
            }

            50% {
                transform: scale(1.3);
            }

            100% {
                transform: scale(1.1);
            }
        }
    </style>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <img src="~/MakitaLogo.png" style=" height:46px; margin-left:20px; top:0!important; margin-top:-8px!important;">

            <div class="container">

                @*<a href="~/Home/Index"><img src="~/Images/download.png" class="navbar-brand" style="width:100px; height:50px"></a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="position:absolute; right:0; top:10px;">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="uk-active">
                            <a href='@Url.Action("Index","Containers2")'>
                                <img alt="Check" id="containerImg" src="@Url.Content("~/Images/cargo-container-crane.png")" style="width: 45px;height: 45px; padding:" 10, 10, 10, 10"; filter: invert(15%) sepia(93%) saturate(3987%) hue-rotate(26deg) brightness(96%) contrast(102%);">
                            </a>
                        </li>
                        @if (ViewBag.UserRightLevel > 1)
                        {
                            <li class="dropdown" style="padding-left:25px">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="text-decoration:none;">
                                    <img alt="Check" id="settingsImg" src="@Url.Content("~/Images/cogs-solid.svg")" style="width: 45px; height: 45px; filter: invert(15%) sepia(93%) saturate(3987%) hue-rotate(26deg) brightness(96%) contrast(102%);">
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown dropdown-submenu">
                                    <li>
                                        <a class="nav-link text-dark" style="color:black;" asp-area="" asp-controller="ContainerTypes" asp-action="Index"><b>Container type</b></a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" style="color:black;" asp-area="" asp-controller="PalletTypes" asp-action="Index"><b>Pallet type</b></a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" style="color:black;" asp-area="" asp-controller="Countries" asp-action="Index"><b>Countries</b></a>
                                    </li>
                                    <li>
                                        <a class="nav-link text-dark" style="color:black;" asp-area="" asp-controller="Users" asp-action="Index"><b>Users</b></a>
                                    </li>
                                </ul>
                            </li>
                        }
                                            <li>
                        <a class="nav-link text-dark" style="color:black; margin-left:15px;" id="pcPal" asp-area="" asp-controller="PartCenterPallets" asp-action="Index"><b> PC pallets</b></a>
                    </li>
                    </ul>

                    @{
                        var nume = @User.Identity.Name.Split('.').Last();
                        string altceva = nume;
                        altceva = char.ToUpper(nume[0]) + nume.Substring(1);
                    }
                    <p class="nav navbar-text text-dark">Hello, @ViewBag.FullName!</p>

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="width:100%;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted hidden-print">
        <div class="container">
            &copy; 2021 - PalletLoading
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
