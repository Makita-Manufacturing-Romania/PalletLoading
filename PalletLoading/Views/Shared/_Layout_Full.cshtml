<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a href="~/Home/Index"><img src="~/Images/download.png" class="navbar-brand" style="width:100px; height:50px"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="uk-active">
                            <a href='@Url.Action("Index","Containers2")'>
                                <img alt="Check" src="@Url.Content("~/Images/cargo-container-crane.png")" style="width: 45px;height: 45px; padding:"10, 10, 10, 10"; filter: invert(15%) sepia(93%) saturate(3987%) hue-rotate(26deg) brightness(96%) contrast(102%);">
                            </a>
                        </li>
                        <li class="dropdown"  style="padding-left:15px">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img alt="Check" src="@Url.Content("~/Images/cogs-solid.svg")" style="width: 45px; height: 45px; filter: invert(15%) sepia(93%) saturate(3987%) hue-rotate(26deg) brightness(96%) contrast(102%);">
                            </a>
                            <ul class="dropdown-menu">
                                <li class="dropdown dropdown-submenu">
                                <li>@Html.ActionLink("Container type", "Index", "ContainerTypes")</li>
                                <li>@Html.ActionLink("Pallet type", "Index", "PalletTypes")</li>
                                <li>@Html.ActionLink("Countries", "Index", "Countries")</li>
                            </ul>
                        </li>
                    </ul>
                    @{
                        var nume = @User.Identity.Name.Split('.').Last();
                        string altceva = nume;
                        altceva = char.ToUpper(nume[0]) + nume.Substring(1);
                    }
                    <p class="nav navbar-text">Hello, @altceva!</p>

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="width:100%;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PalletLoading
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
