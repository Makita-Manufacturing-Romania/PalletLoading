                                </li>
                            </ul>
                        </li>
                        @*                        <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="ContainerTypes" asp-action="Index">Container Types</a>
                            </li>
                            <li class="nav-item">
