@model IEnumerable<PalletLoading.Models.UserRight>

@{
    ViewData["Title"] = "Index";
}


<link rel="stylesheet" href="~/css/background.css" />

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Right)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RightLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Right)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RightLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
