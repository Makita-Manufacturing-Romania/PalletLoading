@model PalletLoading.Models.FormDefinition

@{
    ViewData["Title"] = "New form type";
}


<link rel="stylesheet" href="~/css/background.css" />

<h1>New Form Definition</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PDF_Name" class="control-label"></label>
                <input asp-for="PDF_Name" class="form-control" />
                <span asp-validation-for="PDF_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DocRefNumber" class="control-label"></label>
                <input asp-for="DocRefNumber" class="form-control" />
                <span asp-validation-for="DocRefNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
