@model IEnumerable<PalletLoading.Models.FormDefinition>

@{
    ViewData["Title"] = "Form types";
}


<link rel="stylesheet" href="~/css/background.css" />

<h1>Form definitions</h1>

<p>
    <a asp-action="Create">New Form type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PDF_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocRefNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PDF_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocRefNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
