@model PalletLoading.Models.User

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/background.css" />

<style type="text/css">

    .ui-autocomplete {
        position: absolute;
        z-index: 1000;
        cursor: default;
        padding: 0;
        margin-top: 2px;
        list-style: none;
        background-color: #ffffff;
        border: 1px solid #ccc;
        -webkit-border-radius: 5px;
        -moz-border-radius: 5px;
        border-radius: 5px;
        -webkit-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        -moz-box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }

        .ui-autocomplete > li {
            padding: 3px 20px;
        }

            .ui-autocomplete > li.ui-state-focus {
                background-color: #DDD;
            }

    .ui-helper-hidden-accessible {
        display: none;
    }
</style>
<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label">Username</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Full name</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usermail" class="control-label">Mail</label>
                <input asp-for="Usermail" class="form-control" />
                <span asp-validation-for="Usermail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRightId" class="control-label">Right</label>
                <select asp-for="UserRightId" class="form-control" asp-items="ViewBag.UserRightId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script>
        $("#Username").keyup(function () {
            if ($(this).val().length > 2) {
                var textval = $(this).val();
                $(this).autocomplete({
                    source: function (request, response) {

                        $.ajax({
                            url: "/Users/UserSearch/",

                            data: {
                                user: textval,
                            },

                            cache: false,
                            type: "GET",
                            contentType: "application/json;charset=UTF-8",
                            dataType: "json",
                            success: function (data) {
                                response($.map(data, function (item) {
                                    return { value: item.username.replace("@@mmrmakita.eu", ""), json: item };

                                }));

                            }
                        });

                    },
                    minLength: 2,
                    select: function (event, ui) {

                        var temp = ui.item.json.fullName;
                        var tempMail = ui.item.json.username;
                        $("#FullName").val(temp);
                        $("#Usermail").val(tempMail);
                    }


                });

            }
        });


        $(".createBtn").click(function (e) {
            e.preventDefault();
            var user = $("#Username").val();


            $.ajax({

                url: "/Users/CheckUsersExist",
                data: { username: user },
                cache: false,
                //type: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (data) {
                    if (data.res == true) {
                        alert("User already exist!");
                    }
                    else {
                        $("#mainForm").submit();
                    }
                }
            });

        })
    </script>
}
